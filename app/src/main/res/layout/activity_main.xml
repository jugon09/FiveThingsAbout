<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.camilo.fivethingsabout.MainActivity"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagePortAventura"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/portAventura"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/image_margin"
            android:contentDescription="@string/portAventura"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPortAventura"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageIllaFantasia"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/illaFantasia"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/image_margin"
            android:contentDescription="@string/portAventura"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textIllaFantasia"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageBarcelonaBeach"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/playa"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/image_margin"
            android:contentDescription="@string/playa"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPlaya"/>
    </LinearLayout>
</ScrollView>
